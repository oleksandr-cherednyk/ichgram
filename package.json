{
  "name": "ichgram",
  "private": true,
  "workspaces": [
    "apps/client",
    "apps/server"
  ],
  "scripts": {
    "dev": "pnpm -r --filter ./apps/client --filter ./apps/server dev",
    "dev:client": "pnpm --filter ./apps/client dev",
    "dev:server": "pnpm --filter ./apps/server dev",
    "build:client": "pnpm --filter ./apps/client build",
    "build:server": "pnpm --filter ./apps/server build",
    "build": "pnpm -r --filter ./apps/client --filter ./apps/server build",
    "lint:client": "pnpm --filter ./apps/client lint",
    "lint:server": "pnpm --filter ./apps/server lint",
    "lint": "pnpm -r --filter ./apps/client --filter ./apps/server lint",
    "format:client": "pnpm --filter ./apps/client format",
    "format:server": "pnpm --filter ./apps/server format",
    "test:client": "pnpm --filter ./apps/client test",
    "test:server": "pnpm --filter ./apps/server test",
    "test": "pnpm -r --filter ./apps/client --filter ./apps/server test",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": "prettier --write"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4"
  }
}
